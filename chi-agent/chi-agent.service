[Unit]
Description=chiOS AI Agent Service
Documentation=https://github.com/matoval/chios
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
WorkingDirectory=/usr/lib/chi-agent
ExecStart=/usr/bin/python3 /usr/lib/chi-agent/agent.py --mode daemon
Restart=on-failure
RestartSec=5

Environment=OLLAMA_HOST=http://localhost:11434
Environment=CHI_AGENT_LOG_LEVEL=info

# Resource limits â€” leave headroom for Ollama
MemoryMax=512M
CPUQuota=50%

[Install]
WantedBy=default.target
